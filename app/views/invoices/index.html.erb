<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table width="100%">
  <tr>
    <th>Store</th>
    <th>Issued</th>
    <th>Invoice#</th>
    <th>Items</th>
    <th>Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.store.name %></td>
    <td><%= invoice.issued %></td>
    <td><%= invoice.number %></td>
    <td><%= invoice.repairs.length %></td>
    <td>$<%= number_with_precision(invoice.total, :precision => 2)  %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @invoices %>

<%= form_tag(daily_invoices_path, :method => "post") do %>
  Date:<%= datepicker_input :invoice, :issued, :dateFormat => "yy-mm-dd" %>
  <%= submit_tag("Create") %>
  <%= submit_tag("View") %>
  <%= submit_tag("Quicken") %>
<% end %>

